<h1>Eat-Da-Burger!</h1>

<img src="/assets/img/Burger.png" alt="burger!">

<div class="row">

<div class="col-md-5" id="uneatenBurgers">
    {{#each burgers}}
        {{#unless this.devoured}}
            <div class="burgerLine">
                <span>{{id}}.  {{burger_name}}</span>
            </div>
        {{/unless}}
    {{/each}}
</div>

<div class="col-md-2" id="devourButtonArea">
    {{#each burgers}}
        {{#unless this.devoured}}
            <div>
                <form action="/update/{{id}}?_method=PUT" method="POST">
                    <button class="devourButton btn btn-success">Devour it!</button>
                </form>
            </div>
        {{/unless}}
    {{/each}}
</div>

<div "col-md-3"id="eatenBurgers">
    {{#each burgers}}
        {{#if this.devoured}}
            <div class="burgerLine">
                <span>{{id}}.  {{burger_name}}</span>
            </div>
        {{/if}}
    {{/each}}
</div>
</div>

<form id="newBurgerForm" action="/create" method="POST">
    <textarea type="text" name="newBurger"></textarea>

    <button class="btn btn-danger"type="submit">Submit</button>
</form>
